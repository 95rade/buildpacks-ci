#!/bin/bash -l

set -eux

cd deployments-buildpacks
bundle -j4
. ./bin/switch $DEPLOYMENT_NAME

cd deployments/$DEPLOYMENT_NAME
rm -f .vagrant/machines/default/aws/elastic_ip

vagrant destroy -f
vagrant up --provider=aws

bash -c "bosh login admin admin"
bash -c "bosh create user admin $BOSH_PASSWORD"

rm manifest.yml
git add -A
git ci -m "recreated deployment $DEPLOYMENT_NAME"
