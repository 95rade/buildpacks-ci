#!/usr/bin/env bash

set -e

base_dir=$(pwd)

pushd buildpacks-ci/scripts/notifications
  bundle install
  new_releases_output=$(./new-releases $base_dir/new-releases)
  echo $new_releases_output | ./slack
  echo $new_releases_output | ./pivotal_tracker
popd

pushd new-releases
  git add -A
  git commit -m 'Updates for latest tags'
popd
