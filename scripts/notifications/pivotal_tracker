#!/usr/bin/env ruby

require 'json'

name, description = ARGV[0], ARGV[1]

payload = {
  name: name,
  description: description,
  requested_by_id: 765241 
}.to_json

`
  curl -X POST \
       -vvvv \
       -H "X-TrackerToken: #{ENV['TRACKER_API_TOKEN']}" \
       -H "Content-Type: application/json" \
       -d '#{payload}' \
       "https://www.pivotaltracker.com/services/v5/projects/#{ENV['TRACKER_PROJECT_ID']}/stories"
`
