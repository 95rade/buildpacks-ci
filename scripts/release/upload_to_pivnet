#!/bin/bash
set -euo pipefail

pushd buildpacks-pivnet-uploader
bundle -j4
popd

buildpacks-pivnet-uploader/upload_to_pivnet \
  "$PIVNET_PRODUCT_NAME" \
  `cat finalize-buildpack/buildpack/VERSION` \
  pivotal-buildpacks-cached/*_buildpack-cached-v*.zip \
  finalize-buildpack/buildpack/RECENT_CHANGES \
  "$GITHUB_URL" < /dev/null
