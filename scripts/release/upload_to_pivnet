#!/bin/bash
set -euo pipefail

pushd buildpacks-pivnet-uploader
bundle -j4
popd

pushd buildpack
../buildpacks-ci/scripts/release/extract-recent-changes
popd

./buildpacks-ci/scripts/release/finalize-buildpack

buildpacks-pivnet-uploader/upload_to_pivnet \
  "$PIVNET_PRODUCT_NAME" \
  `cat buildpack/VERSION` \
  pivotal-buildpacks-cached/*_buildpack-cached-v*.zip \
  buildpack/RECENT_CHANGES \
  "$GITHUB_URL" < /dev/null

# To be deprecated after elastic-runtime lifetime
unset CREATE_ON_PIVNET
UPDATE_RUNTIME=true buildpacks-pivnet-uploader/upload_to_pivnet \
  "$PIVNET_PRODUCT_NAME" \
  `cat buildpack/VERSION` \
  pivotal-buildpacks-cached/*_buildpack-cached-v*.zip \
  buildpack/RECENT_CHANGES \
  "$GITHUB_URL" < /dev/null
